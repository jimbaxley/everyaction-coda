{
  "name": "my-crm-pack",
  "version": "0.1.0",
  "description": "A Coda Pack that integrates with an external CRM via API calls.",
  "author": "Your Name",
  "license": "MIT",
  "api": {
    "baseUrl": "https://api.your-crm.com",
    "auth": {
      "type": "Bearer",
      "token": "YOUR_API_TOKEN"
    }
  },
  "formulas": [
    {
      "name": "GetContact",
      "description": "Retrieves a contact from the CRM.",
      "parameters": [
        {
          "name": "contactId",
          "type": "string"
        }
      ]
    },
    {
      "name": "CreateContact",
      "description": "Creates a new contact in the CRM.",
      "parameters": [
        {
          "name": "contactData",
          "type": "object"
        }
      ]
    }
  ],
  "syncTables": [
    {
      "name": "Contacts",
      "description": "Syncs contacts from the CRM."
    },
    {
      "name": "Accounts",
      "description": "Syncs accounts from the CRM."
    }
  ]
}